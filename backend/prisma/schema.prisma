datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
  
}


model User {
  id        String  @id @default(uuid())
  name      String
  email     String  @unique
  password  String
  createdAt DateTime @default(now())
  resumes Resume[] @relation("UserRelation")
}


model Resume {
  id String @unique @id
  resumeTitle String
  userEmail String
  createdAt DateTime @default(now())
  firstName String
  lastName  String
  address String
  jobTitle String
  phone String
  email String

  user User @relation("UserRelation",fields: [userEmail],references: [email])
}